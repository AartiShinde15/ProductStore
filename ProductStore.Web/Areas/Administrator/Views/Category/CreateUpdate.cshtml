@model ProductStore.DataAccess.ViewModels.CategoryVM

<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="category.Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@((Model.categories == null || Model.category.Id == 0) ? "Create" : "Update") Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="category.Name"></label>
            <input asp-for="category.Name" class="form-control" />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        @if (Model.categories == null || Model.category.Id == 0)
        {
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        }

        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

