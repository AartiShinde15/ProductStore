@model ProductStore.DataAccess.ViewModels.ProductVM

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreateUpdate" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Product
            </a>
        </div>
    </div>
</div>

<table id="tblList" class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                ImageUrl
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Rating
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.products)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="50%">@item.ImageUrl</td>
                <td width="50%">@item.Price</td>
                <td width="50%">@item.CategoryId</td>
                <td width="50%">@item.Rating</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
